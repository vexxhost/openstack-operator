apiVersion: v1
kind: Secret
metadata:
  namespace: openstack
  name: ceilometer-config
stringData:
  ceilometer.conf: |
    [DEFAULT]
    transport_url = fake:/
    [notification]
    ack_on_event_error = false
    {% for transport in spec.get('transports', []) %}
    messaging_urls = {{ transport }}
    {% endfor %}
  pipeline.yaml: |
    ---
    sources: []
    sinks: []
  event_pipeline.yaml: |
    ---
    sources:
    - name: all
      events:
      - "*"
      sinks:
      - atmosphere
    sinks:
    - name: atmosphere
      publishers:
      - http://localhost:8080/v1/events
