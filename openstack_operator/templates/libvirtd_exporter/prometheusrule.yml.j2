apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  name: libvirtd-exporter
  namespace: openstack
  labels:
    {{ labels("libvirtd-exporter") | indent(4) }}
spec:
  groups:
  - name: libvirtd
    rules:
    - alert: VirtualizationDriverMismatch
      for: 15m
      expr: |
        count(count by(version, driver, driver_version) (libvirtd_info)) != 1
      annotations:
        priority: P4
        description: QEMU and libvirt versions are not matching in the cloud.
