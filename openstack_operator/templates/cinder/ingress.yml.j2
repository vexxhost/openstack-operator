apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: cinder
  namespace: openstack
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
    certmanager.k8s.io/cluster-issuer: "letsencrypt-prod"
spec:
{% if spec.ingress.host is defined %}
  rules:
  - host: {{ spec.ingress.host }}
    http:
      paths:
      - path: /
        backend:
          serviceName: cinder
          servicePort: 80
  tls:
  - hosts:
    - {{ spec.ingress.host }}
    secretName: cinder-tls
{% else %}
  rules:
  {% for v in spec.ingress %}
  - host: {{ v.host }}
    http:
      paths:
      - path: /
        backend:
          serviceName: cinder
          servicePort: 80
  {% endfor %}
  tls:
  - hosts:
    {% for v in spec.ingress %}
    - {{ v.host }}
    {% endfor %}
    secretName: cinder-tls
{% endif %}
